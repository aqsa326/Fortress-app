name: DNS Watchdog

on:
  push:
  schedule:
    - cron: '0 * * * *'  # runs every hour

jobs:
  dns-check:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: 3.10

      - name: Run DNS Watchdog
        run: python scripts/dns_watchdog_ai.py
